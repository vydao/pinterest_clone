<div id="pin_show" class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
        <div class="panel-heading pin-image" style="text-align:center;">
            <%= image_tag @pin.image.url, style: 'max-width:100%' %>
        </div>
        <div class="panel-body">
            <h1><%= @pin.title %></h1>
            <p class="description"><%= @pin.description %></p>
            <p>Submitted by: <%= @pin.user.email %></p>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <p class="user">Submitted by <%= @pin.user.email %></p>
            </div>
            <div class="col-md-6">
                <div class="btn-group pull-right">
                  <%= link_to 'Edit', edit_pin_path, class: 'btn btn-default' %>
                  <%= link_to 'Delete', pin_path, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-default'  %>
                </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>